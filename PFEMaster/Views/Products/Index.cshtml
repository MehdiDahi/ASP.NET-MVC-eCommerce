@model IEnumerable<PFEMaster.Models.Products>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        @*<li class="nav-item">
            <a class="nav-link" href="~/Dashboard">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        </li>*@

        <li class="nav-item">
            <a class="nav-link" href="~/Categories">
                <i class="fa fa-list"></i>
                <span>Categories</span>
            </a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="~/Products">
                <i class="fa fa-list"></i>
                <span>Products</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="tables.html">
                <i class="fa fa-shopping-cart"></i>
                <span>Orders</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Roles">
                <i class="fa fa-id-badge"></i>
                <span>Roles</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Users">
                <i class="fa fa-users"></i>
                <span>Users</span>
            </a>
        </li>
    </ul>
    <div id="content-wrapper">
        <div id="myform" class="container-fluid">
            <!-- Breadcrumbs-->

            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Products</li>

            </ol>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Product Details
                    <a onclick="Add('@Url.Action("addOrEdit","Products")')" style="color: white;" class="btn btn-info pull-right fa fa-plus">Add New</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    @*<th>Sr. No.</th>*@
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    @*<th>Sr. No.</th>*@
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        @*<td>@item.ProductsId</td>*@
                                        <td><img src="@Url.Content(item.ImageUrl)" style="height:100px; width:100px;" alt="" /></td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price</td>
                                        <td>
                                            <a onclick="Edit('@Url.Action("addOrEdit","Products",new { id= @item.ProductsId})')" class="btn btn-outline-secondary fa fa-pencil-alt"></a>
                                            <a href="~/Products/Delete?id=@item.ProductsId" class="btn btn-outline-danger fa fa-trash"></a>
                                        </td>


                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
        </div>