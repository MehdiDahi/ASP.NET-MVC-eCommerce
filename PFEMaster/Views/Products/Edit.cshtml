    <li class="nav-item">
        <a class="nav-link" href="tables.html">
            <i class="fa fa-shopping-cart"></i>
            <span>Orders</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Roles">
            <i class="fa fa-id-badge"></i>
            <span>Roles</span>
