        <a class="nav-link" href="~/Dashboard">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>
    </li>*@

    <li class="nav-item">
        <a class="nav-link" href="~/Categories">
            <i class="fa fa-list"></i>
            <span>Categories</span>
        </a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="~/Products">
            <i class="fa fa-list"></i>
            <span>Products</span>
        </a>
