@using WebApplication1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Connexion";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section id="container-cnx">
    <div class="container-user" id="container-user">
        <div class="form-container sign-in-container">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h1 class="h1">Sign in</h1>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Email, new { @class = "input", @placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                @Html.PasswordFor(m => m.Password, new { @class = "input", @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <button class="btn-signin btn-user">Sign In</button>
            }
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="h1">Welcome Back!</h1>
                    <p class="p">
                        To keep connected with us please login with your personal info
                    </p>
                    <button class="ghost btn-signin btn-user" id="signIn">
                        Sign In
                    </button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1 class="h1">Hello, Friend!</h1>
                    <p class="p">
                        Enter your personal details and start journey with us
                    </p>
                    <button class="ghost btn-signup btn-user" id="signUp">
                        Sign Up
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>