@model WebApplication1.Models.RegisterViewModel
@{
    ViewBag.Title = "Connexion";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section id="container-cnx">
    <div class="container-user right-panel-active" id="container-user">
        <div class="form-container sign-up-container">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h1 class="h1">Create Account</h1>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "input", @placeholder = "Name" })
                @Html.TextBoxFor(m => m.Email, new { @class = "input", @placeholder = "Email" })
                @Html.PasswordFor(m => m.Password, new { @class = "input", @placeholder = "Password" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", @placeholder = "Confirm Password" })

                <button class="btn-signin btn-user">Sign Up</button>
            }
        </div>
        
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="h1">Welcome Back!</h1>
                    <p class="p">
                        To keep connected with us please login with your personal info
                    </p>
                    <button class="ghost btn-signin btn-user" id="signIn">
                        Sign In
                    </button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1 class="h1">Hello, Friend!</h1>
                    <p class="p">
                        Enter your personal details and start journey with us
                    </p>
                    <button class="ghost btn-signup btn-user" id="signUp">
                        Sign Up
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>