            <a class="nav-link" href="~/Dashboard">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        </li>*@

    <li class="nav-item">
        <a class="nav-link" href="~/Categories">
            <i class="fas fa-fw fa-table"></i>
            <span>Categories</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Products">
            <i class="fas fa-fw fa-table"></i>
            <span>Products</span>
        </a>
